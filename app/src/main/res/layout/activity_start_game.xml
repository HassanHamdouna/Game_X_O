<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_custom_background"
    android:orientation="vertical"
    android:layout_weight="3"
    tools:context=".AllScreen.StartGame">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:layout_marginTop="30sp"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_L_X"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/user_player"



            >

            <TextView
                android:id="@+id/tv_player_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:text="Player one" />

            <ImageView
                android:id="@+id/imageView_x"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                app:srcCompat="@drawable/crossicon2" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_L_O"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/round_back_dark_blue"


            >

            <TextView
                android:id="@+id/tv_player_tow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:text="Player tow" />

            <ImageView
                android:id="@+id/imageView_o"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                app:srcCompat="@drawable/o" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/number_player_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/read"
            android:textSize="@dimen/_22ssp">

        </TextView>

        <TextView
            android:id="@+id/number_player_tow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/read"
            android:textSize="@dimen/_22ssp">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/round_back_purple"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                app:srcCompat="@drawable/round_back_dark_blue" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
